<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient android:angle="90" android:endColor="@color/naivepastelpink" android:startColor="@color/naivepastelpink" />            
           
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <stroke android:width="3dp" android:color="@color/brick" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="5dp" />                       
            
            <gradient android:angle="90" android:endColor="@color/lightgray" android:startColor="@color/lightgray" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <stroke android:width="3dp" android:color="@color/darkred" />
        </shape></item>
</selector>