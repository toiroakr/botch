                android:paddingLeft="2dp"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:textSize="15sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/rst_detail_data_tabelog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rst_detail"
        android:layout_centerHorizontal="true"
        android:layout_margin="1dp"
        android:autoLink="web"
        android:scrollHorizontally="true"
        android:singleLine="false"
        android:textSize="15sp" />

    <ScrollView
        android:id="@+id/comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rst_detail"
        android:layout_alignRight="@+id/rst_detail"
        android:layout_below="@+id/rst_detail_data_tabelog"
        android:background="@color/darkred"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/comment_component"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



        </LinearLayout>
    </ScrollView>

</RelativeLayout>