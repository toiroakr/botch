<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/rst_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/rst_detail_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:id="@+id/rst_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rst_detail_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/darkred"
        android:padding="1dp"
        android:shrinkColumns="1"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/rst_detail_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/darkred" >

            <TextView
                android:id="@+id/rst_detail_title_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:text="@string/rst_detail_category"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rst_detail_data_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:paddingLeft="2dp"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:id="@+id/rst_detail_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/darkred" >

            <TextView
                android:id="@+id/rst_detail_title_dinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:text="@string/rst_detail_dinner"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rst_detail_data_dinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:paddingLeft="2dp"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:id="@+id/rst_detail_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/darkred" >

            <TextView
                android:id="@+id/rst_detail_title_lunch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:text="@string/rst_detail_lunch"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/rst_detail_data_lunch"
